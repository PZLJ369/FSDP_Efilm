<div class="container">
<div class="row justify-content-md-center">
<div class="col-6 col-md-5">
  <div class="card text-center">
    <div class="card card-body" style="box-shadow: 0.3px 0.3px #888888;">
        <div>
          <div class="text-center">
            <img class="logo" src="/img/tick.png" style="width: 5em;height:5em;padding: 5px;">
            <h5 style="color:rgb(49, 202, 158)">Payment Successful</h5>
          </div>
          <br>
          {{#if creditpay}}
            <div class="d-flex justify-content-between"><span>Card number:</span> <span>{{creditpay.cardNumber}}</span></div>
            <div class="d-flex justify-content-between"><span>Cardholder's Name:</span> <span>{{creditpay.cardHolder}}</span></div>
            <div class="d-flex justify-content-between"><span>Movie:</span> <span>{{creditpay.ticketTitle}}</span></div>
            <div class="d-flex justify-content-between"><span>Number of Tickets:</span> <span>{{creditpay.ticketNumber}}</span></div>
            <div class="d-flex justify-content-between"><span>Total Price:</span> <span>S$ {{creditpay.totalPrice}}</span></div>
            <hr>
            <center>
              <h5 style="color:rgb(49, 202, 158)">Your Movie PIN:</h5>
              <h5>{{creditpay.VerificationCode}}</h5>
            </center>

          {{/if}}
          <hr>

          <a href="/payments/paySucDelCart" class="btn btn-primary" type="button">close</a>

        </div>
      </div>
  </div>
</div>
</div>
</div>
<br>

